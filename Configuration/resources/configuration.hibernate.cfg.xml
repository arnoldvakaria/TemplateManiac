<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>
		<property name="dialect">aron.sinoai.templatemaniac.dalutils.hibernateimplementation.SQLiteDialect</property>
		<property name="connection.driver_class">org.sqlite.JDBC</property>
		<property name="connection.username"></property>
		<property name="connection.password"></property>
		<property name="connection.autocommit">true</property> 

		<mapping class="aron.sinoai.templatemaniac.configuration.model.MainProperty"/>
		<mapping class="aron.sinoai.templatemaniac.configuration.model.System"/>
	</session-factory>
</hibernate-configuration>
